# Production Environment Variables
# Copy this file to .env and update the values

# Database - Use PostgreSQL or MySQL for production
DATABASE_URL="postgresql://username:password@localhost:5432/freelancetrack"
# For SQLite (development only): DATABASE_URL="file:./prod.db"

# NextAuth.js Configuration
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-super-secret-key-minimum-32-characters-long"

# App Configuration
NODE_ENV="production"
PORT=3000

# Optional: Email Configuration (for future features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Optional: Storage Configuration (for future file uploads)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-west-2"
# AWS_S3_BUCKET="your-bucket-name"

# Optional: Analytics (for future features)
# GOOGLE_ANALYTICS_ID="GA-XXXXXXXX-X"